<?xml version='1.0' encoding='utf-8'?>
<widget 
        id="com.phonegap.helloworld" 
        version="1.0.0" 
        xmlns="http://www.w3.org/ns/widgets" 
        versionCode = "0.1"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">
    
    <name>Мои практики</name>
    <description>
        Программа для подсчета практик.
    </description>
    <author email="2dongrigorio@gmail.com" href="http://geo-format.ru">
        Don Grigorio
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <icon src="img/ldpi.png" platform="android" qualifier="ldpi" />
    <icon src="img/mdpi.png" platform="android" qualifier="mdpi" />
    <icon src="img/hdpi.png" platform="android" qualifier="hdpi" />
    <icon src="img/xhdpi.png" platform="android" qualifier="xhdpi" />
    <icon src="img/xxhdpi.png" platform="android" qualifier="xxhdpi" />
    <icon src="img/fr-xxhdpi.png" platform="android" qualifier="fr-xxhdpi" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="14" />
        <allow-intent href="market:*" />
    </platform>

    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
</widget>
